<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dec2c2c2"
    tools:context="com.development.honza.jasichinese.MainActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:id="@+id/fullscreen_content_controls"
        style="?metaButtonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center_horizontal"
        android:background="@color/black_overlay"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <LinearLayout
            android:id="@+id/layout_main_v1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_main_v_h_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/start_button_category"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@color/black_overlay"
                    android:onClick="showWordsCategory"
                    android:text="@string/start_button_category"
                    android:textColor="@android:color/darker_gray"
                    tools:text="@string/start_button_category" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_main_v_h_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_prochazet_category"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginRight="1dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@color/black_overlay"
                    android:elevation="0dp"
                    android:onClick="showSwipeActivityCategory"
                    android:text="@string/button_prochazet_category"
                    android:textColor="@android:color/darker_gray"
                    tools:text="@string/button_prochazet_category" />

                <Spinner
                    android:id="@+id/spinner_flashcards"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="1dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:background="@android:color/darker_gray"
                    android:hapticFeedbackEnabled="true"
                    android:spinnerMode="dialog" />

            </LinearLayout>

            <Spinner
                android:id="@+id/spinner_poradi"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0"
                android:background="@android:color/holo_orange_dark"
                android:scrollbarSize="30dp"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/spinner_category"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="0"
                android:background="@android:color/holo_orange_dark"
                android:scrollbarSize="30dp"
                android:spinnerMode="dialog"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
