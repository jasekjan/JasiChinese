<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary" type="color">@color/colorPrimary</item>
        <item name="colorPrimaryDark" type="color">@color/colorPrimaryDark</item>
        <item name="colorAccent" type="color">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle" type="style">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay" type="id">true</item>
        <item name="android:windowBackground" type="id">@null</item>
        <item name="metaButtonBarStyle" type="id">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle" type="id">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background" type="color">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar" type="id">false</item>
        <item name="windowNoTitle" type="id">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
